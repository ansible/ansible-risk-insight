# {{ ansible_managed }}

auto {{ lxc_net_bridge }}
iface {{ lxc_net_bridge }} inet static
    address {{ lxc_net_address }}
    netmask {{ lxc_net_netmask }}
{% if lxc_net_gateway is not none %}
    gateway {{ lxc_net_gateway }}
{% endif %}
    bridge_fd 0
    bridge_maxwait 0
    bridge_ports {{ lxc_net_bridge_port }}
    bridge_hello 2
    bridge_maxage 12
    bridge_stp off
